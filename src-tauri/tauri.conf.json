{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Project Jumpstart",
  "version": "0.1.0",
  "identifier": "com.projectjumpstart.desktop",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Project Jumpstart",
        "width": 1400,
        "height": 1000,
        "minWidth": 900,
        "minHeight": 700,
        "visible": true,
        "center": true,
        "focus": true,
        "decorations": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "Developer ID Application: John McKinley (KACZ4GS4RL)",
      "providerShortName": "KACZ4GS4RL"
    }
  }
}
