{
  "hooks": {
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/pre-compact.sh",
            "description": "Save critical context before compaction",
            "timeout": 10000
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/extract-learnings.sh",
            "description": "Extract learnings from session transcript",
            "timeout": 30000
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/check-test-staleness.sh",
            "description": "Detect stale tests after source file changes",
            "timeout": 10000
          }
        ]
      }
    ]
  }
}
